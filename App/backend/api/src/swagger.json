{
  "openapi": "3.1.0",
  "info": {
    "title": "API service api",
    "description": "Está API é feita com o intuito de gerênciar os produtos e pedidos de uma loja virtual",
    "version": "1.0.0",
    "contact": {
      "name": "Suporte",
      "email": "guidu.dev@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Servidor Local"
    }
  ],
  "tags": [
    {
      "name": "Products",
      "description": "Operações com produtos"
    },
    {
      "name": "Orders",
      "description": "Operações com pedidos"
    }
  ],
  "paths": {
    "/products/all": {
      "get": {
        "tags": ["Products"],
        "summary": "Retorna todos os produtos",
        "description": "Retorna todos os produtos",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "retorna todos os produtos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Products"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Token inválido ou não informado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/byId/:id": {
      "get": {
        "tags": ["Products"],
        "summary": "Retorna um produto pelo id",
        "description": "Retorna um produto pelo id",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "retorna um produto pelo id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "price": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Token inválido ou não informado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/orders/byUser": {
      "get": {
        "tags": ["Orders"],
        "summary": "Retorna todos os pedidos de um usuário",
        "description": "Retorna todos os pedidos de um usuário",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "retorna todos os pedidos de um usuário",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Orders"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Token inválido ou não informado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/orders/create" : {
      "post": {
        "tags": ["Orders"],
        "summary": "Cria um pedido",
        "description": "Cria um pedido",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productId": {
                    "type": "number"
                  },
                  "quntity": {
                    "type": "number"
                  },
                  "document": {
                    "type": "string"
                  },
                  "total": {
                    "type": "number"
                  },
                  "image": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "retorna o pedido criado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "user_id": {
                      "type": "number"
                    },
                    "date": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    },
                    "document": {
                      "type": "string"
                    },
                    "total": {
                      "type": "number"
                    },
                    "product_id": {
                      "type": "number"
                    },
                    "image": {
                      "type": "string"
                    },
                    "quntity": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Token inválido, não informado ou campos faltando",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Products": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "string"
          },
          "image": {
            "type": "string"
          }
        }
      },
      "Orders": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "user_id": {
            "type": "number"
          },
          "date": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "document": {
            "type": "string"
          },
          "total": {
            "type": "number"
          },
          "product_id": {
            "type": "number"
          },
          "image": {
            "type": "string"
          },
          "quntity": {
            "type": "number"
          }
          }
        }
      }
  }
  }
